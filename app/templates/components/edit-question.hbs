{{#if editQuestionForm}}
  <h4>Edit {{question.author}}'s {{question.question}}</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="type">Question</label>
        {{input value=question id="question" placeholder=question.question}}
      </div>

      <button {{action 'edit' question}}>Save</button>
    </form>
  </div>
{{else}}
  <button {{action 'editQuestionForm'}}>Edit</button>
{{/if}}